<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/custom_loading_screen.js" />
        <include src="file://{resources}/scripts/custom_game_ui_expanded.js" />
    </scripts>
    <Panel class="ETDLoadingRoot">
        <Panel id="seq" >
            <Image id="seq_bg" class="SeqBg" />
            <Image id="seq_light" class="SeqImg" src="file://{images}/custom_game/loading_screen/light.png" />
            <Image id="seq_dark" class="SeqImg" src="file://{images}/custom_game/loading_screen/dark.png" />
            <Image id="seq_water" class="SeqImg" src="file://{images}/custom_game/loading_screen/water.png" />
            <Image id="seq_fire" class="SeqImg" src="file://{images}/custom_game/loading_screen/fire.png" />
            <Image id="seq_nature" class="SeqImg" src="file://{images}/custom_game/loading_screen/nature.png" />
            <Image id="seq_earth" class="SeqImg" src="file://{images}/custom_game/loading_screen/earth.png" />
            <Image id="seq_fg" class="SeqBg" src="file://{images}/custom_game/loading_screen/shadow_circle.png" />
            <Label id="Tip" text=""/>

            <Panel id="Content">
                <Panel id="Changelog">
                    <Label id="ChangelogTitle" class="Title" text="#loading_screen_changelog"/>
                    <Label id="ChangelogText" text="#loading_screen_change_text" html="true"/>
                </Panel>

                <Panel id="Promote">
                    <Panel id="Ad">
                        <Image id="AdImage" src="file://{images}/custom_game/loading_screen/eletd2.png" />
                        <!-- <Label id="AdTitle" text="#mobile_game"/> -->
                    </Panel>
                    <!-- <Label id="PromoteTitle" class="Title" text="#loading_mobile" html="true"/> -->
                </Panel>
            </Panel>
        </Panel>
    </Panel>
</root>